						<artifactId>tools</artifactId>
						<version>${java.version}</version>
						<scope>system</scope>
						<systemPath>${project.basedir}/pom.xml</systemPath>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<configuration>
					<contextFile>./src/main/webapp/META-INF/context.xml</contextFile>
					<url>http://localhost:8090/manager</url>
					<server>TomcatServer</server>
					<path>/</path>
					<port>80</port>
					<truststoreFile>C:\Program
						Files\Java\jdk1.8.0_151\jre\lib\security\cacerts</truststoreFile>
					<truststorePass>changeit</truststorePass>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
